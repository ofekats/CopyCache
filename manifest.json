{
    "manifest_version": 3,
    "name": "CopyCache",
    "version": "1.0",
    "permissions": [
        "clipboardRead", 
        "clipboardWrite",
        "storage",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },      
    "icons": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  }
  